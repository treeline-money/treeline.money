<style>
  .download-btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    background: var(--color-accent);
    color: white;
    font-weight: 500;
    font-size: 1.125rem;
    border-radius: 8px;
    text-decoration: none;
    transition: background 0.15s ease;
  }

  .download-btn-primary:hover {
    background: var(--color-accent-muted);
  }

  .download-option {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.25rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    text-decoration: none;
    transition: border-color 0.15s ease, box-shadow 0.15s ease;
  }

  .download-option:hover {
    border-color: var(--color-accent);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .download-option-icon {
    color: var(--color-text-muted);
  }

  .download-option-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .download-option-label {
    font-weight: 500;
    color: var(--color-text);
  }

  .download-option-note {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .download-option-file {
    font-size: 0.75rem;
    font-family: ui-monospace, monospace;
    color: var(--color-text-muted);
    background: var(--color-bg);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }

  .download-option.highlighted {
    border-color: var(--color-accent);
    background: var(--color-bg);
  }

  .discord-note {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .discord-icon {
    width: 1.25rem;
    height: 1.25rem;
    flex-shrink: 0;
  }

  /* Download modal */
  .download-modal {
    position: fixed;
    inset: 0;
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 100;
    padding: 1rem;
  }

  .download-modal.visible {
    display: flex;
  }

  .download-modal-backdrop {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    animation: fadeIn 0.2s ease;
  }

  .download-modal-content {
    position: relative;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 2rem;
    max-width: 400px;
    width: 100%;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
    animation: scaleIn 0.2s ease;
    text-align: center;
  }

  .download-modal-content h3 {
    margin: 0 0 0.75rem;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
  }

  .download-modal-content p {
    margin: 0 0 1.5rem;
    color: var(--color-text-muted);
    line-height: 1.5;
  }

  .download-modal-actions {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .download-modal-btn-primary {
    display: block;
    padding: 0.75rem 1.5rem;
    background: var(--color-accent);
    color: white;
    font-weight: 500;
    border-radius: 8px;
    text-decoration: none;
    transition: background 0.15s ease;
  }

  .download-modal-btn-primary:hover {
    background: var(--color-accent-muted);
  }

  .download-modal-btn-secondary {
    padding: 0.75rem 1.5rem;
    background: none;
    border: 1px solid var(--color-border);
    color: var(--color-text-muted);
    font-weight: 500;
    border-radius: 8px;
    cursor: pointer;
    transition: border-color 0.15s ease, color 0.15s ease;
  }

  .download-modal-btn-secondary:hover {
    border-color: var(--color-text-muted);
    color: var(--color-text);
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes scaleIn {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
</style>

<script>
  const RELEASES_API = "https://api.github.com/repos/treeline-money/treeline-releases/releases/latest";
  const BASE_URL = "https://github.com/treeline-money/treeline-releases/releases/latest/download";

  // Detect OS (skip on mobile)
  const detectOS = (): 'mac' | 'windows' | 'linux' | null => {
    const ua = navigator.userAgent.toLowerCase();
    const platform = navigator.platform.toLowerCase();

    // Skip detection on mobile devices (no mobile app yet)
    const isMobile = /android|webos|iphone|ipad|ipod|blackberry|iemobile|opera mini/i.test(ua);
    if (isMobile) return null;

    if (platform.includes('mac') || ua.includes('mac')) return 'mac';
    if (platform.includes('win') || ua.includes('win')) return 'windows';
    if (platform.includes('linux') || ua.includes('linux')) return 'linux';
    return null;
  };

  // Fetch latest release and update download links
  async function initDownloads() {
    try {
      const response = await fetch(RELEASES_API);
      if (!response.ok) throw new Error('Failed to fetch release');

      const release = await response.json();
      const version = release.tag_name.replace('v', '');

      // Update version display
      const versionDisplay = document.getElementById('version-display');
      if (versionDisplay) {
        versionDisplay.textContent = `Version ${version}`;
      }

      // Update release notes link
      const releaseNotesLink = document.getElementById('release-notes-link') as HTMLAnchorElement;
      if (releaseNotesLink) {
        releaseNotesLink.href = `https://github.com/treeline-money/treeline-releases/releases/tag/v${version}`;
      }

      // Update all download links
      const downloadOptions = document.querySelectorAll('.download-option');
      downloadOptions.forEach(option => {
        const template = option.getAttribute('data-file-template');
        if (template) {
          const filename = template.replace('{version}', version);
          (option as HTMLAnchorElement).href = `${BASE_URL}/${filename}`;
        }
      });

      // Now handle OS detection and highlighting
      const os = detectOS();
      if (os) {
        highlightDetectedOS(os);
      }
    } catch (e) {
      console.error('Failed to fetch release info:', e);
      // Links will fall back to the releases page
      const versionDisplay = document.getElementById('version-display');
      if (versionDisplay) {
        versionDisplay.textContent = 'Latest version';
      }

      // Still do OS detection even if version fetch fails
      const os = detectOS();
      if (os) {
        highlightDetectedOS(os);
      }
    }
  }

  function highlightDetectedOS(os: 'mac' | 'windows' | 'linux') {
    const detectedSection = document.getElementById('detected-download');
    const detectedLabel = document.getElementById('detected-os-label');
    const detectedLink = document.getElementById('detected-download-link') as HTMLAnchorElement;
    const detectedText = document.getElementById('detected-download-text');
    const detectedNote = document.getElementById('detected-download-note');
    const allPlatformsLabel = document.getElementById('all-platforms-label');

    // Find the matching download option
    const matchingOption = document.querySelector(`[data-os="${os}"]`) as HTMLAnchorElement;

    if (matchingOption && detectedSection && detectedLabel && detectedLink && detectedText && detectedNote) {
      const label = matchingOption.querySelector('.download-option-label')?.textContent || '';
      const note = matchingOption.querySelector('.download-option-note')?.textContent || '';
      const href = matchingOption.href;

      detectedLabel.textContent = `Download for ${label}`;
      detectedLink.href = href;
      detectedText.textContent = `Download for ${label}`;
      detectedNote.textContent = note;
      detectedSection.classList.remove('hidden');

      // Highlight the matching option
      matchingOption.classList.add('highlighted');

      // Update "All platforms" label
      if (allPlatformsLabel) {
        allPlatformsLabel.textContent = 'Other platforms';
      }
    }
  }

  // Initialize on page load
  initDownloads();

  // Modal functionality
  const modal = document.getElementById('download-modal');
  const modalDismiss = document.getElementById('modal-dismiss');
  const modalBackdrop = modal?.querySelector('.download-modal-backdrop');

  function showModal() {
    if (modal) {
      modal.classList.add('visible');
      modal.setAttribute('aria-hidden', 'false');
      document.body.style.overflow = 'hidden';
    }
  }

  function hideModal() {
    if (modal) {
      modal.classList.remove('visible');
      modal.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';
    }
  }

  modalDismiss?.addEventListener('click', hideModal);
  modalBackdrop?.addEventListener('click', hideModal);

  // Show modal when any download link is clicked
  document.querySelectorAll('.download-option, .download-btn-primary').forEach(link => {
    link.addEventListener('click', () => {
      // Small delay to let the download start
      setTimeout(() => showModal(), 500);
    });
  });

  // Close on Escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && modal?.classList.contains('visible')) {
      hideModal();
    }
  });
</script>
