---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { plugins, getPlugin, getAllPluginIds, getPreviewMarkdownUrl, resolveMarkdownPaths } from "../../data/plugins";
import { marked } from "marked";

export function getStaticPaths() {
  return getAllPluginIds().map(id => ({
    params: { id }
  }));
}

const { id } = Astro.params;
const plugin = getPlugin(id);

if (!plugin) {
  return Astro.redirect('/plugins');
}

const isComingSoon = plugin.status === 'coming-soon';

// Fetch PLUGIN_PREVIEW.md from the repo
let markdownContent = '';
let fetchError = false;

try {
  const previewUrl = getPreviewMarkdownUrl(plugin.repo);
  const response = await fetch(previewUrl);
  if (response.ok) {
    const rawMarkdown = await response.text();
    // Resolve relative paths to absolute GitHub URLs
    const resolvedMarkdown = resolveMarkdownPaths(rawMarkdown, plugin.repo);
    markdownContent = await marked.parse(resolvedMarkdown);
  } else {
    fetchError = true;
  }
} catch (e) {
  fetchError = true;
}
---

<BaseLayout title={`${plugin.name} - Treeline Plugin`}>
  <article class="max-w-3xl mx-auto px-6 py-12">
    <!-- Back link -->
    <a href="/plugins" class="back-link">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M19 12H5M12 19l-7-7 7-7"/>
      </svg>
      All Plugins
    </a>

    <!-- Header -->
    <header class="plugin-header">
      <div class="plugin-header-row">
        <h1 class="text-3xl font-semibold">{plugin.name}</h1>
        {isComingSoon && <span class="coming-soon-badge">Coming Soon</span>}
      </div>
    </header>

    {isComingSoon ? (
      <!-- Coming soon plugin -->
      <div class="coming-soon-content">
        <p class="text-lg text-[var(--color-text-muted)] mb-6">
          {plugin.description}
        </p>
        <p class="text-[var(--color-text-muted)]">
          This plugin is currently in development. Check back soon!
        </p>
      </div>
    ) : fetchError ? (
      <!-- Fallback if no PLUGIN_PREVIEW.md -->
      <div class="fallback-content">
        <p class="text-lg text-[var(--color-text-muted)] mb-8">
          {plugin.description}
        </p>
        <p class="text-[var(--color-text-muted)]">
          Visit the repository for more information about this plugin.
        </p>
      </div>
    ) : (
      <!-- Rendered markdown content -->
      <div class="markdown-content" set:html={markdownContent} />
    )}

    <!-- GitHub link (only for available plugins) -->
    {!isComingSoon && (
      <div class="repo-section">
        <a href={plugin.repo} target="_blank" rel="noopener noreferrer" class="repo-link">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          View on GitHub
        </a>
      </div>
    )}
  </article>
</BaseLayout>

<style>
  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-muted);
    font-size: 0.875rem;
    margin-bottom: 2rem;
    transition: color 0.15s;
  }

  .back-link:hover {
    color: var(--color-text);
  }

  .plugin-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--color-border);
  }

  .plugin-header-row {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .coming-soon-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 4px;
    font-size: 0.75rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .coming-soon-content {
    margin-bottom: 2rem;
  }

  /* Markdown content styling */
  .markdown-content {
    color: var(--color-text);
    line-height: 1.7;
  }

  .markdown-content :global(h1) {
    font-size: 1.75rem;
    font-weight: 600;
    margin: 2rem 0 1rem;
    color: var(--color-text);
  }

  .markdown-content :global(h2) {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 2rem 0 1rem;
    color: var(--color-text);
  }

  .markdown-content :global(h3) {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 1.5rem 0 0.75rem;
    color: var(--color-text);
  }

  .markdown-content :global(p) {
    margin: 1rem 0;
    color: var(--color-text-muted);
  }

  .markdown-content :global(ul),
  .markdown-content :global(ol) {
    margin: 1rem 0;
    padding-left: 1.5rem;
    color: var(--color-text-muted);
  }

  .markdown-content :global(li) {
    margin: 0.5rem 0;
  }

  .markdown-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    border: 1px solid var(--color-border);
    margin: 1.5rem 0;
  }

  /* Theme-aware images: hide -light images in dark mode, -dark images in light mode */
  .markdown-content :global(img[src*="-light"]) {
    display: block;
  }
  .markdown-content :global(img[src*="-dark"]) {
    display: none;
  }
  :root.dark .markdown-content :global(img[src*="-light"]) {
    display: none;
  }
  :root.dark .markdown-content :global(img[src*="-dark"]) {
    display: block;
  }

  .markdown-content :global(a) {
    color: var(--color-accent);
    text-decoration: none;
  }

  .markdown-content :global(a:hover) {
    text-decoration: underline;
  }

  .markdown-content :global(code) {
    background: var(--color-bg-secondary);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
  }

  .markdown-content :global(pre) {
    background: var(--color-bg-secondary);
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .markdown-content :global(pre code) {
    background: none;
    padding: 0;
  }

  .markdown-content :global(blockquote) {
    border-left: 3px solid var(--color-border);
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: var(--color-text-muted);
    font-style: italic;
  }

  .markdown-content :global(hr) {
    border: none;
    border-top: 1px solid var(--color-border);
    margin: 2rem 0;
  }

  /* Fallback content */
  .fallback-content {
    margin-bottom: 2rem;
  }

  /* Repo link */
  .repo-section {
    margin-top: 3rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
  }

  .repo-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-accent);
    font-weight: 500;
    transition: opacity 0.15s;
  }

  .repo-link:hover {
    opacity: 0.8;
  }
</style>
