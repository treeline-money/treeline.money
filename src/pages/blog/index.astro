---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="Blog - Treeline" description="Thoughts on personal finance, data ownership, and building tools for yourself.">
  <div class="max-w-3xl mx-auto px-6 py-16">
    <h1 class="mb-12">Blog</h1>

    {posts.length === 0 ? (
      <p class="text-[var(--color-text-muted)]">No posts yet. Check back soon.</p>
    ) : (
      <div class="space-y-12">
        {posts.map((post) => (
          <article>
            <p class="text-[var(--color-text-muted)] text-sm mb-2">
              {post.data.date.toLocaleDateString("en-US", {
                year: "numeric",
                month: "long",
                day: "numeric",
              })}
            </p>
            <h2 class="mb-2">
              <a href={`/blog/${post.id}`} class="text-[var(--color-text)] hover:text-[var(--color-accent)]">
                {post.data.title}
              </a>
            </h2>
            <p class="text-[var(--color-text-muted)]">{post.data.description}</p>
          </article>
        ))}
      </div>
    )}
  </div>
</BaseLayout>
