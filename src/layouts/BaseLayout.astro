---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "A local-first, plugin-based finance app. Built on DuckDB." } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, "https://treeline.money");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#4a8a63" />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Social -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Treeline" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://treeline.money/og-image.png" />
    <meta property="og:url" content={canonicalURL} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://treeline.money/og-image.png" />

    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "WebSite",
          "@id": "https://treeline.money/#website",
          "url": "https://treeline.money",
          "name": "Treeline",
          "description": "A local-first, plugin-based finance app. Built on DuckDB.",
          "publisher": {
            "@id": "https://treeline.money/#organization"
          }
        },
        {
          "@type": "Organization",
          "@id": "https://treeline.money/#organization",
          "name": "Treeline",
          "url": "https://treeline.money",
          "logo": {
            "@type": "ImageObject",
            "url": "https://treeline.money/og-image.png"
          },
          "sameAs": [
            "https://github.com/treeline-money",
            "https://discord.gg/EcNvBnSft5"
          ]
        },
        {
          "@type": "SoftwareApplication",
          "@id": "https://treeline.money/#software",
          "name": "Treeline",
          "description": "A local-first, plugin-based personal finance app built on DuckDB. Track your finances with full data ownership, extend with plugins, and query your data with SQL.",
          "applicationCategory": "FinanceApplication",
          "operatingSystem": "macOS, Windows, Linux",
          "offers": {
            "@type": "Offer",
            "price": "0",
            "priceCurrency": "USD"
          },
          "downloadUrl": "https://treeline.money/download",
          "screenshot": "https://treeline.money/screenshots/accounts-light.png",
          "softwareVersion": "beta",
          "author": {
            "@id": "https://treeline.money/#organization"
          }
        }
      ]
    })} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="alternate" type="application/rss+xml" title="Treeline Blog" href="/rss.xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;500;600;700&display=swap" rel="stylesheet">
    <title>{title}</title>
    <script is:inline>
      // Apply theme immediately to prevent flash
      if (localStorage.getItem('theme') === 'dark' ||
          (!localStorage.getItem('theme') && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.classList.add('dark');
      }
    </script>
  </head>
  <body class="antialiased">
    <nav class="fixed top-0 left-0 right-0 z-50 bg-[var(--color-bg)]/80 backdrop-blur-sm border-b border-[var(--color-border)]">
      <div class="max-w-4xl mx-auto px-6 py-4 flex items-center justify-between">
        <a href="/" class="flex items-center gap-2 text-[var(--color-text)] font-semibold text-lg hover:opacity-80">
          <!-- Light theme logo -->
          <svg class="w-6 h-6 logo-light" viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M32 12 L20 35 L35 40 L44 35 Z" fill="#f5f5f4"/>
            <path d="M20 35 L35 40 L44 35 L54 52 L10 52 Z" fill="#4a8a63"/>
            <path d="M32 12 L54 52 L10 52 Z" stroke="#4a8a63" stroke-width="2.5" fill="none"/>
          </svg>
          <!-- Dark theme logo -->
          <svg class="w-6 h-6 logo-dark" viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M32 12 L20 35 L35 40 L44 35 Z" fill="#ffffff"/>
            <path d="M20 35 L35 40 L44 35 L54 52 L10 52 Z" fill="#6aaa83"/>
            <path d="M32 12 L54 52 L10 52 Z" stroke="#6aaa83" stroke-width="2.5" fill="none"/>
          </svg>
          treeline
        </a>

        <!-- Desktop navigation -->
        <div class="hidden md:flex items-center gap-6 text-sm">
          <a href="/blog" class="text-[var(--color-text-muted)] hover:text-[var(--color-text)]">Blog</a>
          <a href="https://github.com/treeline-money/treeline" class="text-[var(--color-text-muted)] hover:text-[var(--color-text)]">GitHub</a>
          <a href="https://discord.gg/EcNvBnSft5" class="text-[var(--color-text-muted)] hover:text-[var(--color-text)]">Discord</a>
          <a href="/download" class="px-3 py-1.5 bg-[var(--color-accent)] text-white text-sm font-medium rounded-md hover:bg-[var(--color-accent-muted)] transition-colors">Download</a>
          <button
            id="theme-toggle"
            class="p-2 rounded-md text-[var(--color-text-muted)] hover:text-[var(--color-text)] hover:bg-[var(--color-bg-secondary)] transition-colors"
            aria-label="Toggle theme"
          >
            <svg class="w-5 h-5 sun-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
            <svg class="w-5 h-5 moon-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
            </svg>
          </button>
        </div>

        <!-- Mobile navigation -->
        <div class="flex md:hidden items-center gap-2">
          <button
            id="theme-toggle-mobile"
            class="p-2 rounded-md text-[var(--color-text-muted)] hover:text-[var(--color-text)] hover:bg-[var(--color-bg-secondary)] transition-colors"
            aria-label="Toggle theme"
          >
            <svg class="w-5 h-5 sun-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
            <svg class="w-5 h-5 moon-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
            </svg>
          </button>
          <button
            id="mobile-menu-toggle"
            class="p-2 rounded-md text-[var(--color-text-muted)] hover:text-[var(--color-text)] hover:bg-[var(--color-bg-secondary)] transition-colors"
            aria-label="Toggle menu"
          >
            <svg class="w-6 h-6 menu-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
            <svg class="w-6 h-6 close-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Mobile menu dropdown -->
      <div id="mobile-menu" class="mobile-menu md:hidden">
        <div class="max-w-4xl mx-auto px-6 py-4 flex flex-col gap-4">
          <a href="/blog" class="text-[var(--color-text-muted)] hover:text-[var(--color-text)] py-2">Blog</a>
          <a href="https://github.com/treeline-money/treeline" class="text-[var(--color-text-muted)] hover:text-[var(--color-text)] py-2">GitHub</a>
          <a href="https://discord.gg/EcNvBnSft5" class="text-[var(--color-text-muted)] hover:text-[var(--color-text)] py-2">Discord</a>
          <a href="/download" class="px-4 py-2.5 bg-[var(--color-accent)] text-white text-sm font-medium rounded-md hover:bg-[var(--color-accent-muted)] transition-colors text-center">Download</a>
        </div>
      </div>
    </nav>

    <main class="pt-20">
      <slot />
    </main>

    <footer class="border-t border-[var(--color-border)] mt-24">
      <div class="max-w-4xl mx-auto px-6 py-12">
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-6">
          <div>
            <p class="text-[var(--color-text-muted)] text-sm">
              treeline
            </p>
          </div>
          <div class="flex items-center gap-6 text-sm">
            <a href="https://github.com/treeline-money/treeline" class="text-[var(--color-text-muted)] hover:text-[var(--color-text)]">GitHub</a>
            <a href="https://discord.gg/EcNvBnSft5" class="text-[var(--color-text-muted)] hover:text-[var(--color-text)]">Discord</a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import "../styles/global.css";

  /* Theme toggle icon visibility */
  .sun-icon { display: none; }
  .moon-icon { display: block; }
  :root.dark .sun-icon { display: block; }
  :root.dark .moon-icon { display: none; }

  /* Theme-aware logo */
  .logo-light { display: block; }
  .logo-dark { display: none; }
  :root.dark .logo-light { display: none; }
  :root.dark .logo-dark { display: block; }

  /* Mobile menu */
  .mobile-menu {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-in-out;
    background: var(--color-bg);
    border-top: 1px solid var(--color-border);
  }

  .mobile-menu.open {
    max-height: 300px;
  }

  /* Mobile menu toggle icons */
  .menu-icon { display: block; }
  .close-icon { display: none; }
  .mobile-menu.open ~ div .close-icon { display: block; }
  .mobile-menu.open ~ div .menu-icon { display: none; }

  /* Alternative approach - use attribute on button */
  #mobile-menu-toggle .menu-icon { display: block; }
  #mobile-menu-toggle .close-icon { display: none; }
  #mobile-menu-toggle[aria-expanded="true"] .menu-icon { display: none; }
  #mobile-menu-toggle[aria-expanded="true"] .close-icon { display: block; }
</style>

<script>
  // Theme toggle for desktop
  const toggle = document.getElementById('theme-toggle');
  toggle?.addEventListener('click', () => {
    const isDark = document.documentElement.classList.toggle('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
  });

  // Theme toggle for mobile
  const toggleMobile = document.getElementById('theme-toggle-mobile');
  toggleMobile?.addEventListener('click', () => {
    const isDark = document.documentElement.classList.toggle('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
  });

  // Mobile menu toggle
  const menuToggle = document.getElementById('mobile-menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');

  menuToggle?.addEventListener('click', () => {
    const isOpen = mobileMenu?.classList.toggle('open');
    menuToggle.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
  });

  // Close mobile menu when clicking a link
  const mobileMenuLinks = mobileMenu?.querySelectorAll('a');
  mobileMenuLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.remove('open');
      menuToggle?.setAttribute('aria-expanded', 'false');
    });
  });
</script>
