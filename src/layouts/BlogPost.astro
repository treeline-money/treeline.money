---
import BaseLayout from "./BaseLayout.astro";

interface Props {
  title: string;
  date: Date;
  description: string;
}

const { title, date, description } = Astro.props;

const formattedDate = date.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<BaseLayout title={`${title} - Treeline`} description={description}>
  <article class="max-w-3xl mx-auto px-6 py-16">
    <header class="mb-12">
      <p class="text-[var(--color-text-muted)] text-sm mb-4">{formattedDate}</p>
      <h1 class="mb-4">{title}</h1>
      <p class="text-xl text-[var(--color-text-muted)]">{description}</p>
    </header>

    <div class="prose text-lg">
      <slot />
    </div>

    <footer class="mt-16 pt-8 border-t border-[var(--color-border)]">
      <a href="/blog" class="text-[var(--color-text-muted)] hover:text-[var(--color-text)]">
        ‚Üê Back to blog
      </a>
    </footer>
  </article>
</BaseLayout>
